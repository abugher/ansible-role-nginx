server {
  listen                80;
  server_name           {{ inventory_hostname }} {{ inventory_hostname }}.{{ domain }} {{ hostvars[inventory_hostname]['ip_address']}};
  location / {
    return 301          https://$http_host/$request_uri;
  }
  location /public {
    root                /usr/share/nginx/www;
    autoindex           on;
    try_files           $uri $uri/ =404;
  }
}
